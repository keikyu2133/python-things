print("Welcome to the simple summation calculator!")
print("Please enter your values below")
x = input("Enter first value:")
while True:
    try:
        if "." in x :
            xx = float(x)
            print(xx, "Yes, user input is a float number.")
            break
        else:
            xx = int(x)
            print(xx, "Yes, input string is an Integer.")
            break
    except ValueError:
        x = input("Please enter a valid number! You dumdum.Try again:")
y = input("Enter second value:")
while True:
    try:
        if "." in y :
            yy = float(y)
            print(yy, "Yes, user input is a float number.")
            break
        else:
            yy = int(y)
            print(yy, "Yes, input string is an Integer.")
            break
    except ValueError:
        y = input("Please enter a valid number! You dumdum.Try again:")
result = (xx + yy)
result_return = ("The sum is: {}.")
print(result_return.format(result))
