print("Welcome to the simple summation calculator!")
print("Please enter your values below")
def input_checker(value):
    while True:
        try:
            if "." in value :
                negative_result = float(value)
                print(value, "Float number detected.")
                return float(value)                     
                break
            else:
                negative_result = int(value)
                print(value, "Integer detected.")
                return int(value)
                break
        except ValueError:
            value = input("Please enter a valid number! You dumdum. Try again:")

x = input("Enter first value:")
input_checker(x)
y = input("Enter second value:")
input_checker(y)
result = (input_checker(x) + input_checker(y))
result_return = ("The sum is: {}.")
